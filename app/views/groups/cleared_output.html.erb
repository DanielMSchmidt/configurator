<form>
  <fieldset>
    <% @groups.each do |group| %>
      <% unless group.products.nil? || group.products.empty?%>
        <% products = group.products.select{|x| x.default?} + group.products.select{|x| !x.default?} %>
        <% productnames = products.collect!{|x| x.name}%>
        <%= select(group.name, 'select', productnames) %>
        <div id="value">
        </div>
      <% end %>
    <% end %>
  </fieldset>
</form>
